@model IEnumerable<FYP.Models.User>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Grúpa @User.Identity.Name</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProgressXP)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.GroupId)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>

            <td>
                @if (item.ProgressXP != null)
                {
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar"
                             aria-valuemin="0" aria-valuemax="100" style="width:@item.ProgressXP%">
                            @item.ProgressXP%
                        </div>
                    </div>
                }
                else
                {
                   <h5>No Progress Logged Yet!</h5>
                }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.GroupId)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>