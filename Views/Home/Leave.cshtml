@model FYP.Models.Group

@{
    ViewBag.Title = "Leave Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Leave</h2>

<h3>Are you sure you want to leave this group?</h3>
<div>
    <h4>Group</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Leave" class="btn btn-default" /> 

        </div>
    }
    <br />
    @Html.ActionLink("Back to Group Home", "MyGroup", new { id = User.Identity.Name})
</div>
