@model FYP.Models.Group

@{
    ViewBag.Title = "Join Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Join Group</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
       <p>@ViewBag.Gid</p>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GroupPass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GroupPass, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Join" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back", "GroupHome")


    </div>
