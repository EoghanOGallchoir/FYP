        <tr>
            <th>
                IRISH
            </th>
            <th>
                ENGLISH
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
           
            if (item.Irish != null)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Irish)
                       
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.English)
                    </td>
