@model PagedList.IPagedList<FYP.Models.VocabList>

@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Vocab";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
   
