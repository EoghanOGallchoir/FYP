                        </audio>
                        <button onclick="document.getElementById('player').play()">Play</button>
                    </td>
                    *@
                </tr>
            }
            else
            {
                <tr>
                    
                </tr>
            }
        }
    </table>
</body>
<footer>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Vocab", new { page = page }))
</footer>




