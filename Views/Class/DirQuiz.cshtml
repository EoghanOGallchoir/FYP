@model FYP.Models.DirectionQ
@{
    ViewBag.Title = "DirQuiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DirQuiz</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    

    <div class="row">
        <div class="container" style="margin:0 auto">

            <div class="row">
                <h1> @Html.DisplayFor(x => x.Question) </h1>

            </div>

            <div class="row">
                <h3>@Html.RadioButtonFor(x => x.option1, new { @class = "form-control" }) @Model.option1</h3>
            </div>

            <div class="row">
                <h3>@Html.RadioButtonFor(x => x.option2, new { @class = "form-control" }) @Model.option2</h3>
            </div>

            <div class="row">
                <h3>@Html.RadioButtonFor(x => x.option3, new { @class = "form-control" }) @Model.option3</h3>
            </div>

            <div class="row">
                <h3>@Html.RadioButtonFor(x => x.option4, new { @class = "form-control" }) @Model.option4</h3>
            </div>

            <div class="row">
                <input type="submit" value="submit" class="btn btn-success"/>
            </div>

        </div> 

</div>
}
