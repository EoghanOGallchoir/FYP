
@{
    ViewBag.Title = "ResultsD1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Results of Direction sentence building</h2>

<body>
  

        @if (Convert.ToInt32(TempData["Score2"]) == 4)
        {
            <div>

                <h1>Fuair tú @TempData["Score2"] as 4.</h1>
                <br />
                <h1>Beidh do feabhas shabhálte.</h1>
            </div>

        }
        else
        {
        <div>
            <h1>Ní fuair tú ach @TempData["Score2"]/4. You will need 4/4 to progress on from this class.</h1>
            <br /> <h2>Ceisteanna Mícheart:</h2>
            <h3>@Html.Raw(TempData["Wrong Answers2:"])</h3>
        </div>
        }

   
    <div>
        <a role="button" class="btn btn-primary btn-lg" href="~/Class/DirectionStart">
            Return to Directions Home
        </a>
    </div>
</body>

