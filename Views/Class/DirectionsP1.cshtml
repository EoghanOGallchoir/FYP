@model FYP.Models.DirectionQ
@{
    ViewBag.Title = "DirectionsP1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Directions - The Basics</h2>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<div style="float: left; display: inline;">@Html.ActionLink("Back", "DirectionStart", "Class")</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="container" style="margin:0 auto">

            <div class="row">
                <h1> @Html.DisplayFor(x => x.Question) </h1>

            </div>

            <div class="row">
                <h3>@Html.RadioButtonFor(x => x.option1, Model.Qid) @Model.option1</h3>
            </div>

            <div class="row">
                <h3>@Html.RadioButtonFor(x => x.option2, Model.Qid) @Model.option2</h3>
            </div>

            <div class="row">
                <h3>@Html.RadioButtonFor(x => x.option3, Model.Qid) @Model.option3</h3>
            </div>

            <div class="row">
                <h3>@Html.RadioButtonFor(x => x.option4, Model.Qid) @Model.option4</h3>
            </div>

           
            
            @Html.HiddenFor(x => x.CorrectAns)

            <div class="row">
                <input type="submit" value="submit" class="btn btn-success" />
            </div>

        </div>

    </div>
}
