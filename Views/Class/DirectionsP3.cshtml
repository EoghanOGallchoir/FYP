@model FYP.Models.DirectionQ3

@{
    ViewBag.Title = "DirectionsP3";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .column {
        float: left;
        width: auto;
        padding: 20px;
    }
</style>

<h2>Directions - Adding extra Vocab</h2>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="container" style="margin:0 auto">

            <div class="column">
                <div class="row">
                    <h1> @Html.DisplayFor(x => x.Question) </h1>
                </div>

                <div class="row">
                    <h3>@Html.RadioButtonFor(x => x.option1, Model.Qid) @Model.option1</h3>
                </div>

                <div class="row">
                    <h3>@Html.RadioButtonFor(x => x.option2, Model.Qid) @Model.option2</h3>
                </div>

                <div class="row">
                    <h3>@Html.RadioButtonFor(x => x.option3, Model.Qid) @Model.option3</h3>
                </div>

                <div class="row">
                    <h3>@Html.RadioButtonFor(x => x.option4, Model.Qid) @Model.option4</h3>
                </div>

                <br />
                <br />
                <div class="row">
                    <input type="submit" value="submit" class="btn btn-success" />
                </div>
            </div>
            <br />
            @if (Model.Qid == 4)
            {
                <div class="column">
                    <div>
                        <img src="~/Images/church.png" style="height:250px;"/>
                    </div>
                </div>
            }
            else if (Model.Qid == 5)
            {
                <div class="column">
                    <div>
                        <img src="~/Images/nature.png" style="height:250px;"/>
                    </div>
                </div>
            }
            else if (Model.Qid == 6)
            {
                <div class="column">
                    <div>
                        <img src="~/Images/fish.png" style="height:250px;"/>
                    </div>
                </div>
            }
            else if (Model.Qid == 2)
            {
                <div class="column">
                    <div>
                        <img src="~/Images/bar.png" style="height:250px;"/>
                    </div>
                </div>
            }
            @Html.HiddenFor(x => x.CorrectAns)



        </div>

    </div>
}
